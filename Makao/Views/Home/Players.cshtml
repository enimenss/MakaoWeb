@model  Makao.Models.PlayersViewModel

@{
    ViewBag.Title = "Players";
}

    <div class="row">
        <div class="col-xs-12" style="text-align:center">
            <h2>Players</h2>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" style="text-align:center">
                    <hr />
                    <input type="hidden" name="Model.Id" id="Model.Id" value=@Model.Id />
                    @for (int i = 0; i < Model.PlayerNames.Count; i++)
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @{string test = "Player" + (i + 1) + ":";}
                            @Html.Label(test)
                            <div>
                                @*@Html.TextBoxFor(model => Model.PlayerNames.ElementAt(i).Name, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.TextBox(string.Format("Model.PlayerNames[{0}].Name", i), Model.PlayerNames[i].Name)

                                @Html.ValidationMessageFor(model => Model.PlayerNames.ElementAt(i).Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            </div>
        </div>


