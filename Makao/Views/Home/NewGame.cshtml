@model Makao.Models.NewGameViewModel

@{
    ViewBag.Title = "NewGame";
}


<div class="row">
    <div class="col-xs-12" style="text-align:center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2>NewGame</h2>
            <div class="form-horizontal" style="text-align:center">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.NumOfPlayers)
                    <div>
                        @Html.EditorFor(model => model.NumOfPlayers)
                        @Html.ValidationMessageFor(model => model.NumOfPlayers, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
  </div>
